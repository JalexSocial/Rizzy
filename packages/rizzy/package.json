{
  "name": "@jalexsocial/rizzy",
  "version": "5.0.0",
  "description": "Client library for Asp.net Rizzy",
  "main": "dist/js/rizzy.js",
  "scripts": {
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "watch": "vite build --mode development --watch",
    "analyze": "vite build --mode analyze",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jalexsocial/rizzy.git"
  },
  "keywords": [
    "asp.net",
    "blazor",
    "htmx",
    "razor",
    "mvc"
  ],
  "author": "Michael Tanczos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jalexsocial/rizzy/issues"
  },
  "homepage": "https://github.com/jalexsocial/rizzy#readme",
  "dependencies": {
    "aspnet-client-validation": "^0.11.1",
    "htmx.org": "^2.0.4"
  },
  "devDependencies": {
    "fs-extra": "^11.3.0",
    "rollup-plugin-visualizer": "^6.0.0",
    "vite": "^6.3.5"
  }
}
